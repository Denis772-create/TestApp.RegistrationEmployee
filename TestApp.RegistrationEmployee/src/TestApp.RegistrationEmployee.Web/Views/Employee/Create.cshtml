@model TestApp.RegistrationEmployee.Web.ViewModels.EmployeeViewModel


<form  asp-controller="Employee" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">FirstName</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SecondName" class="control-label">SecondName</label>
        <input type="text" asp-for="SecondName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">LastName</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label">Position</label>
        <input type="text" asp-for="Position" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmploymentDate" class="control-label">Employment Date</label>
        <input type="date" asp-for="EmploymentDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Company" class="control-label">Company</label>
        <input type="text" asp-for="Company" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>